#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <limits.h>
#define M 3 /*строк*/
#define N 4 /*столбцов*/

int main()
{
  int a[M][N];
  int i, j;
  int mini = INT_MAX, ii, jj;

  for(i = 0; i < M; i++)
    for(j = 0; j < N; j++)
      a[i][j] = rand()%100;

  for(j = 0; j < N; j++){
    for(i = 0; i < M; i++)
        if (a[i][j] <= mini){
            mini = a[i][j];
            ii = i;
            jj = j;
        }
    printf("a[%d][%d] = %d\n", ii, jj, mini);
  }


  for(i = 0; i < M; i++){
      for(j = 0; j < N; j++)
        printf("%5d", a[i][j]);
      printf("\n");

  }
  return 0;
}
